{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [      
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\sandbox\\index",            
        },
        {
            "type": "node",
            "request": "launch",
            "name": "debug tests",
            "runtimeExecutable": "c:\\Program Files\\nodejs\\npm", //change this to your npm path
            "runtimeArgs": [
                "run-script",
                "test-debug",                
            ],
             "port": 9229
        },
        {
              "type": "node",
              "request": "launch",
              "name": "Mocha All",
              "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
              "args": [
                  "-r",
                  "ts-node/register",
                  "--timeout",
                  "999999",
                  "--colors",
                  "${workspaceFolder}/test/**/*.ts",
              ],
              "console": "integratedTerminal",
              "internalConsoleOptions": "neverOpen",
              "protocol": "inspector"
          },

    ]
}