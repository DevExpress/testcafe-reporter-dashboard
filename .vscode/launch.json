    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug sandbox",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "sandbox"
            ],
            "port": 9229,
        },
        {
              "type": "node",
              "request": "launch",
              "name": "Debug tests",
              "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
              "args": [
                  "-r",
                  "ts-node/register",
                  "--timeout",
                  "999999",
                  "--colors",
                  "'${workspaceFolder}/test/**/*.ts'",
              ],
              "console": "integratedTerminal",
              "internalConsoleOptions": "neverOpen",
              "protocol": "inspector"
          },

    ]
}